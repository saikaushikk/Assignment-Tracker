@page
@model AssignmentTracker.Pages.Assignments.DeleteModel

@{
    ViewData["Title"] = "Mark as complete";
}

<h1>Mark as complete</h1>

<h3>Confirm that you have completed this following assignment-</h3>
<div>
    @* <h4>Assignment</h4> *@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Link)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Assignment.ID" />
        <input type="submit" value="Yes, remove this assignment" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
